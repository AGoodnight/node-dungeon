{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "creature",
    "title": "Creature",
    "description": "A Creature",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "name": {
            "type": "string"
        },
        "alive": {
            "type": "boolean"
        },
        "hp": {
            "type": "integer"
        },
        "category": {
            "type": "string"
        },
        "initiative": {
            "type": "integer"
        }
    }
}